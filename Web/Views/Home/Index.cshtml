
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/layui/layui.js"></script>
    <style type="text/css">
        ul.layui-tab-title li:first-child i {
            display: none;
        }

        .layui-tab-item {
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo" style="padding-left:25px ;width:300px; float:left">
                <a target="_blank" href="http://www.cikoosoft.com">
                    <img src="~/Content/Images/Logo.png" style="float:left;height:60px" />
                </a>
            </div>
            <!-- 头部区域（可配合layui已有的水平导航） -->
            @*<ul class="layui-nav layui-layout-left">
                    <li class="layui-nav-item"><a href="">控制台</a></li>
                    <li class="layui-nav-item"><a href="">商品管理</a></li>
                    <li class="layui-nav-item"><a href="">用户</a></li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">其它系统</a>
                        <dl class="layui-nav-child">
                            <dd><a href="">邮件管理</a></dd>
                            <dd><a href="">消息管理</a></dd>
                        </dl>
                    </li>
                </ul>*@
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">公告</a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;" class="site-url" data-id="1-1" data-title="公告列表" data-url="@Url.Action("NoticeList","Notice")">公告列表</a></dd>
                        <dd><a href="">系统公告</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="http://t.cn/RCzsdCq" class="layui-nav-img">
                        @ViewBag.FullName
                    </a>
                    <dl class="layui-nav-child">
                        @*<dd><a href="">基本资料</a></dd>*@
                        <dd><a href="#" id="updatepwd">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="#" id="loginOut">注销</a></li>
            </ul>
        </div>
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item">
                        <a class="" href="javascript:;">订单管理</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" class="site-url" data-id="2-1" data-title="我要订货" data-url="@Url.Action("Index","ShoppingCart")">我要订货</a></dd>
                            <dd><a href="javascript:;" class="site-url" data-id="2-2" data-title="订单查询" data-url="@Url.Action("SelectOrderBill","Purchase")">订单查询</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;" class="site-url">往来管理</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" class="site-url" data-id="2-3" data-title="往来对账" data-url="@Url.Action("Reconciliations","Intercourse")">往来对账</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <div class="layui-body">
            <div style="padding: 3px;">

                <div class="layui-tab layui-tab-card" lay-filter="contentnav" lay-allowclose="true">
                    <ul class="layui-tab-title">
                        <li class="layui-this">网站首页</li>
                    </ul>
                    <div class="layui-tab-content" id="mr">
                        <div class="layui-tab-item layui-show iframeHeight">
                            默认
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-footer">
            <p style="text-align:center; line-height:30px; color:#575757">
                &copy;2018 上海萃谷信息科技有限公司 版权所有
            </p>
        </div>
    </div>

    <script type="text/javascript">
        //计算高度
        var html = document.getElementsByTagName('html')[0];
        document.getElementById("mr").style.height = (html.clientHeight - 196) + "px";
        //layui 开始
        layui.use(['layer', 'element'], function () {
            var $ = layui.jquery
            , element = layui.element//Tab的切换功能，切换事件监听等，需要依赖element模块
            , layer = layui.layer;

            var active = {
                tabAdd: function (url, id, name) {
                    element.tabAdd('contentnav', {
                        title: name,
                        content: '<iframe data-frameid="' + id + '"  src="' + url + '" style="width:100%;height:100%" onscroll="no" frameborder="0"></iframe>',
                        id: id
                    })
                },
                tabChange: function (id) {
                    element.tabChange('contentnav', id);
                }
            };
            //添加Tab
            $('.site-url').on('click', function () {
                var nav = $(this);
                var length = $("ul.layui-tab-title li").length;
                if (length <= 0) {
                    active.tabAdd(nav.attr("data-url"), nav.attr("data-id"), nav.attr("data-title"));
                } else {
                    var isData = false;
                    $.each($("ul.layui-tab-title li"), function () {
                        if ($(this).attr("lay-id") == nav.attr("data-id")) {
                            isData = true;
                        }
                    });
                    if (isData == false) {
                        active.tabAdd(nav.attr("data-url"), nav.attr("data-id"), nav.attr("data-title"));
                    };
                    active.tabChange(nav.attr("data-id"));
                }
            });
            //Tab结束

            //注销
            $('#loginOut').on('click', function () {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("LoginOut", "Account")",
                    success: function (msg) {
                        if (msg == "200")
                            window.location = '@Url.Action("Index", "Account")';
                        else
                            alert("注销失败")
                    }
                });
            });

            //注销结束
            $('#updatepwd').on('click', function () {
                layer.open({
                    type: 2,
                    title: '修改密码',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['500px', '300px'],
                    content: '@Url.Action("Index", "SetUp")',
                });
            });
            //layui 结束
        });
    </script>
</body>

</html>